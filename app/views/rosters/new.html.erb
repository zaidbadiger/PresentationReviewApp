<div class="full-container">
  <div class="jumbotron jumbotron-fluid form">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title center">Add Student</h4>
        <hr class="my-4">
        <%= form_with(model: @section, local: true) do |f| %>

          <%= render 'shared/error_messages' %>
          <%= f.text_field :email, placeholder: 'Email', class: 'form-control' %>
          <%= f.submit "Add Student", class: "btn btn-block btn-primary" %>
        <% end %>
      </div>

    </div>
  </div>
</div>