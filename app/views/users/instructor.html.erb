<h1>Instructor<h1>

<h1>Add Course</h1>

<div>
  <%=@val%>
  <%=@user.courses[0].name%>
</div>

<div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @course, local: true) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.submit "Create my course", class: "btn btn-primary" %>
    <% end %>
  </div>


