<div class="full-container">
  

<h1 class="course-title">Instructor: <%= @user.name %></h1>

<h1><%= link_to "Add Course", "/courses/new", class: "btn btn-lg btn-primary add-course"%></h1>

<div class="container course-box">
  <% @user.courses.each do |course| %>
    <div class="card course">
      <div class="card-header" id=<%= "heading#{course.id}" %>>
        <h5 class="mb-0">
          <a class="btn btn-lg btn-link course-collapse" type="button" data-toggle="collapse" data-target=<%= "#collapse#{course.id}"%> aria-expanded="false" aria-controls=<%= "collapse#{course.id}" %>>
            <%= "Course: #{course.name}" %>
          </a>
        </h5>
      </div>
      <div id=<%= "collapse#{course.id}"%> class="collapse">
        <hr class="my-4">
        <div class="card-body">
          <div class="section-box">
            <% course.sections.each do |section| %>
              <div class="card section">
                
                <div class="card-header" id=<%= "heading#{course.id}S#{section.id}" %>>
                  <h2 class="mb-0">
                    <div class="left-right">
                      <a class="btn btn-link sec-title" type="button" data-toggle="collapse" data-target=<%= "#collapse#{course.id}S#{section.id}"%> aria-expanded="false" aria-controls=<%= "collapse#{course.id}S#{section.id}"%>>
                        <%= "Section: #{section.section_number}"%>
                      </a>
                      <div>
                        <%= link_to "Add Presentation", "/courses/#{course.id}/sections/#{section.id}/presentations/#{section.id}", class: "btn btn-primary" %>
                        <%= link_to "Add Students", "/sections/#{section.id}/student", class: "btn btn-primary" %>
                      </div>
                    </div>
                  </h2>
                  
                </div>
                
                <div id=<%= "collapse#{course.id}S#{section.id}"%> class="collapse">
                  <div class="card-body presentation">
                    <% section.presentations.each do |presentation| %>
                      <div class="left-right">
                        <p class="pres-title"><%= "Presentation: #{presentation.title}"%></p>
                        <div>
                          <a class="btn btn-primary" href="#" role="button">Edit</a>
                          <a class="btn btn-primary" href="#" role="button">Reviews</a>
                          <a class="btn btn-primary" href="#" role="button">Delete</a>
                        </div>
                      </div>
                      <hr class="gray-line">
                    <% end %>
                  </div>
                </div>
              </div>
              <hr class="gray-line">
            <% end %>
          </div>
          <%= link_to "Add Section", "/courses/#{course.id}", class: "btn btn-primary margin-top" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

