<div class="full-container">
  <div class="jumbotron jumbotron-fluid form">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title center">Add Course</h4>
        <hr class="my-4">
        <%= form_with(model: @course, local: true) do |f| %>
          <%= render 'shared/error_messages' %>
          <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
          <%= f.submit "Create my course", class: "btn btn-block btn-primary" %>
        <% end %>
      </div>

    </div>
  </div>
</div>