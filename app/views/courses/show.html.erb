<div class="full-container">
  <div class="container">
    <div class="card-title course-title">
      <h1 class="display-4"><%= "Course: #{Course.find(params[:id]).name}" %></h1>
    </div>
  </div>
  <div class="jumbotron jumbotron-fluid form">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title center">Add Section</h4>
        <hr class="my-4">
        <%= form_with model: @section, local: true do |f| %>
          <%= f.number_field :section_number, placeholder: 'Section Number', class: 'form-control' %>
          <%= f.submit "Create my section", class: "btn btn-block btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>