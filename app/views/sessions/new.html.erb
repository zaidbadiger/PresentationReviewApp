<% provide(:title, "Log in") %>

<!--This is the html for the login page-->
<div class="full-container">
  <div class="jumbotron jumbotron-fluid form">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title center">Log In</h4>
        <hr class="my-4">
        
        <!--Login form-->
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
          </div>
          <%= f.submit "Log in", class: "btn btn-block btn-primary" %>
        <% end %>
        
        <div class="center new-user">
          <small>New user? <%= link_to "Sign up now!", "/signup" %></small>  
        </div>
        
      </div>
    </div>
  </div>
</div>