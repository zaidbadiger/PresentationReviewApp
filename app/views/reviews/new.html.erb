<% provide(:title, "Submit Review") %>

<!--this is the html for submitting a review-->
<div class="full-container">
  <div class="jumbotron jumbotron-fluid form">
    <div class="card">
      <div class="card-body">
        <h3 class="form-title center">Review of <%=@presentation.title%></h3>
        <hr class="my-4">
        
        <!--Form to add a review with real-time updating score-->
        <%= form_with(model: @review, local: true) do |f| %>
          <%= render 'shared/error_messages' %>
          
          <div class = "review-score-box">
            <label class="review-score" id="score" for="review-slider">Score</label>
          </div>
          
          <%= f.range_field :score, :in => 1..10, :step => 1, class: 'form-control-range', id: 'review-slider' %>
          
          <%= f.text_area :comment, placeholder: 'Comments', class: 'form-control' %>
          <%= f.submit "Submit review", class: "btn btn-block btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!--Link to js file that connects to the slider-->
<%= javascript_pack_tag 'review_slider.js' %>

